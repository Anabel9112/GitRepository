{% extends 'index.html.twig' %} {% block contenido %}
<br />
<div class="card shadow">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6">
        <h3 class="m-0 font-weight-normal text-primary">
          Combustible Asignado
        </h3>
      </div>
      <div class="col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default pull-left"
          href="{{ path('combustible_asignado_new') }}"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size: 0.75rem;"
      >
        <thead>
          <th>Tarjeta</th>
          <th>Cantidad asignada</th>
          <th>Fecha</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for asignacion in asignaciones %}
          <tr>
            <td>{{ asignacion.tarjeta }}</td>
            <td>{{ asignacion.cantAsignada }}</td>
            <td>
              {{ asignacion.fecha }}
            </td>
            <td>
              <div class="row">
                <div class="col-md-3 offset-md-1">
                  <a
                    class="text-secondary"
                    href="#"
                    rol="button"
                    data-toggle="modal"
                    data-target="#modalConfirmDelete-{{ asignacion.id }}"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                  {% include "commons/confirmDeleteModal.html.twig" with
                  {'instanceToDelete': habilitacion,
                  'path':'combustible_asignado_delete'} %}
                </div>
                <div class="col-md-3">
                  <a
                    href="{{
                      path('combustible_asignado_edit', {
                        id: asignacion.id
                      })
                    }}"
                    class="text-primary"
                    data-tooltip="Editar"
                    data-tooltip-location="top"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
