{% extends 'index.html.twig' %} {% block javascripts %}
{{ parent() }}

<script src="{{ asset('assets/dist/js/deleteBase.js') }}"></script>
{% endblock javascripts %} {% block contenido%}
<br />
<!-- Default box -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3 class="m-0 font-weight-bold text-primary">Lista de Bases</h3>
      </div>
      <div class="col-sm-12 col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default  pull-left"
          href="{{ path('base_new') }}"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size:0.85rem"
      >
        <thead>
          <th>Nombre</th>
          <th>Descripci칩n</th>
          <th>Direcci칩n</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for base in bases %}
          <tr>
            <td>{{ base.nombre }}</td>
            <td>{{ base.descripcion }}</td>
            <td>{{ base.direccion }}</td>
            <td>
              <div class="row">
                <div class="col-md-3 offset-md-1 text-center">
                  <a
                    class="text-secondary"
                    href="#"
                    rol="button"
                    data-toggle="modal"
                    data-target="#modalConfirmDelete-{{ base.id }}"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                  <!--Modal: modalConfirmDelete-->
                  <div
                    class="modal fade"
                    id="modalConfirmDelete-{{ base.id }}"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div
                      class="modal-dialog modal-sm modal-notify modal-danger"
                      role="document"
                    >
                      <div class="modal-content text-center">
                        <div class="modal-header d-flex justify-content-center">
                          <p class="heading">
                            Est치 seguro de realizar esta acci칩n?
                          </p>
                        </div>
                        <div class="modal-body">
                          <i class="fas fa-times fa-4x animated rotateIn"></i>
                        </div>
                        <div class="modal-footer flex-center">
                          <a
                            type="button"
                            class="btn btn-outline-danger waves-effect"
                            href="{{ path('base_delete', { id: base.id }) }}"
                          >
                            Aceptar
                          </a>
                          <a
                            type="button"
                            class="btn  btn-danger waves-effect"
                            data-dismiss="modal"
                          >
                            Cancelar
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--Modal: modalConfirmDelete-->
                </div>
                <div class="col-md-3 text-center">
                  <a
                    href="{{ path('base_edit', { id: base.id }) }}"
                    data-tooltip="Editar"
                    data-tooltip="top"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
{% endblock %}
