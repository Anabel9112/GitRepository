{% extends 'index.html.twig' %} {% block javascripts %}
{{ parent() }}

<script src="{{ asset('assets/dist/js/deleteBase.js') }}"></script>
{% endblock javascripts %} {% block contenido%}
<!-- Default box -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3 class="m-0 font-weight-bold text-primary">Lista de Bases</h3>
      </div>
      <div class="col-sm-12 col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default  pull-left"
          href="{{ path('base_new') }}"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Dirección</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for base in bases %}
          <tr>
            <td>{{ base.nombre }}</td>
            <td>{{ base.descripcion }}</td>
            <td>{{ base.direccion }}</td>
            <td>
              <div class="row">
                <div class="col-sm-12 col-md-6 text-center">
                  <a
                    class="text-dark"
                    href="{{ path('base_delete', { id: base.id }) }}"
                    data-toggle="tooltip"
                    data-placement="right"
                    title="Eliminar elemento"
                    onclick="return confirm('Esta seguro que desea eliminar el elemento')"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
                <div class="col-sm-12 col-md-6 text-center">
                  <a
                    href="{{ path('base_edit', { id: base.id }) }}"
                    data-toggle="tooltip"
                    data-placement="right"
                    title="Editar elemento"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
<div id="mymodal" class="modal  inmodal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button
          aria-label="Close"
          data-dismiss="modal"
          class="close"
          type="button"
        >
          <span aria-hidden="true">×</span>
        </button>
        <i class="fa-3x fa fa-warning modal-icon text-red"></i>
        <h4 class="modal-title">Acción Peligrosa</h4>
      </div>
      <div class="modal-body">
        <p>
          Está acción puede ocacionar, comprometer la integridad de los datos!
        </p>
        <small
          >Si no es un usuario avanzado, recomendamos que cancele esta
          acción.</small
        >
      </div>
      <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-primary" type="button">
          Cerrar
        </button>
        <a class="btn btn-primary btn-danger btn-delete" href="#">Eliminar</a>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
{% endblock %}
