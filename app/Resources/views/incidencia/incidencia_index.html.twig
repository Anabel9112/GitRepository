{% extends 'index.html.twig' %} {% block contenido %}
<br />
<div class="card shadow">
  <div class="card-header py-3">
    <h3 class="m-0 font-weight-bold text-primary">
      Incidencias
    </h3>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size:0.75rem;"
      >
        <thead>
          <th>No. incidencia</th>
          <th>Tipo</th>
          <th>Observaciones</th>
          <th>No. Hoja de Ruta</th>
          <th>Fecha</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for reporte in reportes %}
          <tr>
            <td>{{ reporte.idincidencia }}</td>
            <td>{{ reporte.tipoincidencias }}</td>
            <td>{{ reporte.detalles }}</td>
            <td>{{ reporte.nohojaruta }}</td>
            <td>
              {% if reporte.fecha %}{{ reporte.fecha|date('Y-m-d') }}{% endif %}
            </td>
            <td>
              <div class="row">
                <div class="col-md-3 offset-md-2">
                  <a
                    class="text-secondary"
                    href="#"
                    rol="button"
                    data-toggle="modal"
                    data-target="#modalConfirmDelete-{{ reporte.idincidencia }}"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                  <!--Modal: modalConfirmDelete-->
                  <div
                    class="modal fade"
                    id="modalConfirmDelete-{{ reporte.idincidencia }}"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div
                      class="modal-dialog modal-sm modal-notify modal-danger"
                      role="document"
                    >
                      <div class="modal-content text-center">
                        <div class="modal-header d-flex justify-content-center">
                          <p class="heading">
                            Está seguro de realizar esta acción?
                          </p>
                        </div>
                        <div class="modal-body">
                          <i class="fas fa-times fa-4x animated rotateIn"></i>
                        </div>
                        <div class="modal-footer flex-center">
                          <a
                            type="button"
                            class="btn btn-outline-danger waves-effect"
                            href="{{
                              path('incidencia_delete', {
                                id: reporte.idincidencia
                              })
                            }}"
                          >
                            Aceptar
                          </a>
                          <a
                            type="button"
                            class="btn  btn-danger waves-effect"
                            data-dismiss="modal"
                          >
                            Cancelar
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--Modal: modalConfirmDelete-->
                </div>
                <div class="col-md-3">
                  <a
                    href="{{
                      path('incidencia_edit', { id: reporte.idincidencia })
                    }}"
                    class="text-primary"
                    data-tooltip="Editar"
                    data-tooltip-location="top"
                    title="Editar elemento"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
