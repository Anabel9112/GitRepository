{% extends 'index.html.twig' %} {% block contenido %}
<br />
<div class="card shadow">
  <div class="card-header py-3">
    <h3 class="m-0 font-weight-bold text-primary">
      Incidencias
    </h3>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size:0.75rem;"
      >
        <thead>
          <th>No. incidencia</th>
          <th>Tipo</th>
          <th>Incidencia</th>
          <th>No. Hoja de Ruta</th>
          <th>Fecha</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for reporte in reportes %}
          <tr>
            <td>{{ reporte.idincidencia }}</td>
            <td>{{ reporte.tipoincidencias }}</td>
            <td>{{ reporte.detalles }}</td>
            <td>{{ reporte.nohojaruta }}</td>
            <td>
              {% if reporte.fecha %}{{ reporte.fecha|date('Y-m-d') }}{% endif %}
            </td>
            <td>
              <div class="row">
                <div class="col-md-4 offset-md-2">
                  <a
                    href="{{
                      path('incidencia_delete', { id: reporte.idincidencia })
                    }}"
                    class="text-secondary"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                    onclick="return confirm('Esta seguro que desea eliminar el elemento')"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
                <div class="col-md-4">
                  <a
                    href="{{
                      path('incidencia_edit', { id: reporte.idincidencia })
                    }}"
                    class="text-primary"
                    data-tooltip="Editar"
                    data-tooltip-location="top"
                    title="Editar elemento"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="mymodal" class="modal  inmodal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button
          aria-label="Close"
          data-dismiss="modal"
          class="close"
          type="button"
        >
          <span aria-hidden="true">×</span>
        </button>
        <i class="fa-3x fa fa-warning modal-icon text-red"></i>
        <h4 class="modal-title">Acción Peligrosa</h4>
      </div>
      <div class="modal-body">
        <p>
          Está acción puede ocacionar, comprometer la integridad de los datos!
        </p>
        <small
          >Si no es un usuario avanzado, recomendamos que cancele esta
          acción.</small
        >
      </div>
      <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-primary" type="button">
          Cerrar
        </button>
        <a class="btn btn-primary btn-danger btn-delete" href="#">Eliminar</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
