    {{ form_start(form, {'method' :'POST'}) }}
    <div class="box box-danger">
        <div class="box-header with-border">
            <div class="user-block">
                <h3 class="text-center ">Nuevo Trabajador</h3>
            </div><!-- /.user-block -->
            <div class="box-tools">
                <ul class="list-inline">
                    <li>
