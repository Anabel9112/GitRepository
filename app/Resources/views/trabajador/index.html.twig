{% extends 'index.html.twig' %}{% block contenido %}
<br />
<div class="card shadow">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6">
        <h3 class="m-0 font-weight-bold text-primary">
          Trabajadores
        </h3>
      </div>
      <div class="col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default  pull-left"
          href="{{ path('trabajador_new') }}"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size:0.75rem;"
      >
        <thead>
          <th>ID/C칩digo</th>
          <th>Nombre</th>
          <th>CI</th>
          <th>Direcci칩n</th>
          <th>Cargo</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for trabajador in trabajadors %}
          <tr>
            <td>{{ trabajador.codigo }}</td>
            <td>{{ trabajador.nombre }}</td>
            <td>{{ trabajador.ci }}</td>
            <td>{{ trabajador.direccion }}</td>
            <td>{{ trabajador.cargo }}</td>
            <td>
              <div class="row">
                <div class="col-md-3 offset-md-2">
                  <a
                    class="text-secondary"
                    href="#"
                    rol="button"
                    data-toggle="modal"
                    data-target="#modalConfirmDelete-{{ trabajador.id }}"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                  <!--Modal: modalConfirmDelete-->
                  <div
                    class="modal fade"
                    id="modalConfirmDelete-{{ trabajador.id }}"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div
                      class="modal-dialog modal-sm modal-notify modal-danger"
                      role="document"
                    >
                      <div class="modal-content text-center">
                        <div class="modal-header d-flex justify-content-center">
                          <p class="heading">
                            Est치 seguro de realizar esta acci칩n?
                          </p>
                        </div>
                        <div class="modal-body">
                          <i class="fas fa-times fa-4x animated rotateIn"></i>
                        </div>
                        <div class="modal-footer flex-center">
                          <a
                            type="button"
                            class="btn btn-outline-danger waves-effect"
                            href="{{
                              path('trabajador_delete', {
                                id: trabajador.id
                              })
                            }}"
                          >
                            Aceptar
                          </a>
                          <a
                            type="button"
                            class="btn  btn-danger waves-effect"
                            data-dismiss="modal"
                          >
                            Cancelar
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--Modal: modalConfirmDelete-->
                </div>
                <div class="col-md-3">
                  <a
                    href="{{ path('trabajador_edit', { id: trabajador.id }) }}"
                    class="text-primary"
                    data-tooltip="Editar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% endblock %}
